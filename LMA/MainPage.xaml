<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:LMA.ViewModels"
             x:Class="LMA.MainPage"
             x:DataType="viewmodels:MainPageViewModel">

    <ContentPage.BindingContext>
        <viewmodels:MainPageViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label Text="Enter your name:" FontSize="18" />
            <Entry x:Name="NameEntry" Placeholder="Your name" Text="{Binding Markdown}" />
            <Button Text="Greet" Clicked="OnGreetClicked" HorizontalOptions="Fill" />
            <Label x:Name="GreetingLabel" FontSize="24" FontAttributes="Bold" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
